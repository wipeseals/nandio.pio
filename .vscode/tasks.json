{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "assemble",
			"command": "uv run sim/cli.py asm",
			"group": "build",
			"problemMatcher": [
				"$python"
			]
		},
		{
			"type": "shell",
			"label": "sim --all",
			"command": "uv run sim/cli.py sim --all",
			"group": "test",
			"problemMatcher": [
				"$python"
			]
		},
		{
			"type": "shell",
			"label": "pytest",
			"command": "uv run pytest -v",
			"group": "test",
			"problemMatcher": [
				"$python"
			]
		}
	]
}